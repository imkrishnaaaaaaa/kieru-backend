<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 1. CONSOLE APPENDER (Visual for Humans) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 2. CLOUD APPENDER (Better Stack - JSON) -->
    <!-- Wrapped in 'springProfile' so it ONLY loads in Prod profile -->
    <springProfile name="prod">
        <springProperty scope="context" name="logtailToken" source="LOGTAIL_SOURCE_TOKEN"/>

        <appender name="LOGTAIL" class="com.logtail.logback.LogtailAppender">
            <appName>kieru-backend</appName>
            <sourceToken>${logtailToken}</sourceToken>
            <mdcFields>userId,clientIp,userAgent,ipAddress,job,secretId,duration_ms</mdcFields>
            <mdcTypes>string,string,string,string,string,string,int</mdcTypes>
        </appender>
    </springProfile>

    <!-- 3. ROOT LOGGERS -->

    <!-- DEV Profile: Console Only (Safe for Work Laptop) -->
    <springProfile name="dev,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.kieru.backend" level="DEBUG"/>
    </springProfile>

    <!-- PROD Profile: Console + Cloud -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="LOGTAIL"/>
        </root>
    </springProfile>

</configuration>